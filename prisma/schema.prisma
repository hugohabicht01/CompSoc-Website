generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("NUXT_DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          String    @id @default(cuid())
  banned      Boolean   @default(false)
  displayName String
  mail        String
  role        User_role @default(USER)
  username    String    @unique

  @@index([id, username])
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  location    String
  summary     String
  description String
  slides      String
  organizer   String
  startTime   DateTime
  endTime     DateTime
  difficulty  EventDifficulty
}

enum EventDifficulty {
  EASY
  HARD
  SOCIAL
}

enum User_role {
  USER
  PRIVILEGED
  ADMIN
}
